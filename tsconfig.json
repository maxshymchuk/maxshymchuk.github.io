{
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "isolatedModules": true,
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowJs": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    }
}
