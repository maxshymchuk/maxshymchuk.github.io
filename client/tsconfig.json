{
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "isolatedModules": true,
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowJs": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "types": ["vite/client", "../global.d.ts"],
        "lib": ["dom", "esnext"]
    }
}
